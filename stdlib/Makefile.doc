# make -f Makefile.doc

PUBLIC=pervasives.mli set.mli map.mli format.mli lexing.mli

all: clean $(PUBLIC:.mli=.cmi)
	ocamldoc -html -d ../doc $(PUBLIC)
.PHONY: all

clean:
	rm -f *.cmi *.cmo
.PHONY: clean

pervasives.cmi: pervasives.mli
	ocamlc -nopervasives -nostdlib -c $<

%.cmi: %.mli
	ocamlc -nostdlib -c $<

include .depend
