# $Id$

default: compile

compile:
	@for file in *.ml; do \
	  printf " ... testing '$$file'"; \
	  if [ `echo $$file | grep bad` ]; then \
	    $(LLAMAC) -c -w a $$file 2> /dev/null && (echo " => failed" && exit 1) || echo " => passed"; \
	  else \
	    test -f `basename $$file ml`mli && $(LLAMAC) -c -w a `basename $$file ml`mli; \
	    $(LLAMAC) -c -w a $$file 2> /dev/null || (echo " => failed" && exit 1); \
	    test -f `basename $$file ml`reference && $(LLAMAC) `basename $$file ml`cmo && ./a.out > `basename $$file ml`result && (diff -q `basename $$file ml`reference `basename $$file ml`result || (echo " => failed" && exit 1)); \
	    echo " => passed"; \
	  fi; \
	done

clean: defaultclean
	@rm -f ./a.out *.cm* *.result
